<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password Press button to copy password</th>
      <th>Status</th>
      <th>User</th>
      <th>Last open/close</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.username %></td>
        <td><button id="<%= player.id %>", onClick="clipboard(<%= player.id %>)", class="btn btn-info"><%= player.password %></button></td>
        <td><%= player.open ? 'open' : 'close' %></td>
        <td><%= player.user.name %></td>
        <td><%= player.updated_at.strftime("%d %B, %I.%M %p") %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

